<p id="notice"><%= notice %></p>

<ul class="nav nav-pills" role="tablist">
  <li class="active"><%= link_to 'View list', tqs_path %></li>
  <li><%= link_to 'New TQ', new_tq_path %></li>
</ul>


<table class = "table">
  <thead>
    <tr>
      <th>Tqid</th>
      <th>Client</th>
      <th>Project</th>
      <th>Date</th>
      <th>Query</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tqs.each do |tq| %>
      <tr class = "info">
        <td><%= tq.tqid %></td>
        <td><%= tq.client %></td>
        <td><%= tq.projectname %></td>
        <td><%= tq.date %></td>
        <td><%= tq.query %></td>
        <td><%= link_to 'Show', tq , class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_tq_path(tq), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', tq, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_tq_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New
<% end %>
